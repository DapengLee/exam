<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:background="#00bcfc"
    android:orientation="horizontal"
    android:paddingBottom="5dp"

    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_choice_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_title_bar_back_normal" />
    </LinearLayout>

    <!--
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_weight="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_scratch"
            style="@style/BarItem"
            android:background="@drawable/selector_bar_item_scratch" />
    </LinearLayout>
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_answercard"
            style="@style/BarItem"
            android:background="@drawable/selector_bar_item_answercard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"

        android:orientation="vertical"
        android:padding="5dip">

        <RadioGroup
            android:visibility="gone"
            android:id="@+id/buttonbar_radio"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:checkedButton="@+id/buttonbar_home"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/select_name_btu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_rounded_rectangle"
                android:button="@null"

                android:gravity="center"
                android:padding="0.3dp"
                android:text="已做"
                android:textColor="@drawable/selector_buttonbar_text"
                android:textSize="15sp" />


            <RadioButton
                android:id="@+id/select_fac_sup_btu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_rounded_rectangle"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="0.3dp"
                android:text="未做"
                android:textColor="@drawable/selector_buttonbar_text"
                android:textSize="15sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckedTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_bar_item_time"
            android:gravity="center"
            android:text="未做"

            android:textColor="#ff999999"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>