<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_background" >

    <RelativeLayout style="@style/rl_top" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:text="修改密码" />

        <ImageView
            android:id="@+id/iv_back"
            style="@style/iv_back" />

<!--         <TextView -->
<!--             android:id="@+id/tv_ok" -->
<!--             style="@style/tv_ok" -->
<!--             android:text="完成" -->
<!--             android:textSize="20sp" /> -->

        <!-- <ImageView -->
        <!-- android:id="@+id/iv_share" -->
        <!-- style="@style/iv_share" /> -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >

        <!-- <ScrollView -->
        <!-- android:id="@+id/scrollView1" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:fadeScrollbars="true" -->
        <!-- android:scrollbars="none" > -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_fff_c10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="left|center_vertical"
                   android:src="@mipmap/find_pass_phone" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="1234567890"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="left|center_vertical"
                    android:src="@mipmap/find_pass_code" />

                <EditText
                    android:id="@+id/etVerify"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="1234567890"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ddd" />

                <Button

                    android:id="@+id/btVerify"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_fff_ddd"
                    android:text="获取验证码"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="left|center_vertical"
                    android:src="@mipmap/find_pass_new" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="新密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="left|center_vertical"
                    android:src="@mipmap/find_pass_confirm" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btOk"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_green_c5dp"
            android:text="提交"

            android:textColor="#fff"
            android:textSize="20sp" />
        <!-- </ScrollView> -->
    </LinearLayout>

</LinearLayout>
