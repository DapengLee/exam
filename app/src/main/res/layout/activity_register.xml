<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_background"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ll_background">

        <RelativeLayout style="@style/rl_top">

            <TextView
                android:id="@+id/tv_title"
                style="@style/tv_title"
                android:text="注册" />

            <ImageView
                android:id="@+id/iv_back"
                style="@style/iv_back" />


            <!-- <ImageView -->
            <!-- android:id="@+id/iv_share" -->
            <!-- style="@style/iv_share" /> -->

        </RelativeLayout>


        <ImageView
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="20dip"
            android:src="@mipmap/login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dip"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- <ScrollView -->
            <!-- android:id="@+id/scrollView1" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:fadeScrollbars="true" -->
            <!-- android:scrollbars="none" > -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_fff_c10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/regist_phone" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"

                        android:gravity="left|center_vertical"
                        android:text="手  机  号"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="请输入"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    style="@style/view_line"
                    android:layout_marginLeft="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/regist_find" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:text="验  证  码"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etVerify"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="请输入"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ddd" />

                    <Button
                        android:id="@+id/btVerify"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_fff_ddd"
                        android:text="获取验证码"
                        android:textColor="#00BCFC"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    style="@style/view_line"
                    android:layout_marginLeft="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/regist_password" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:text="密        码"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    style="@style/view_line"
                    android:layout_marginLeft="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/regist_confirm" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:text="确认密码"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etTuiJian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    style="@style/view_line"
                    android:layout_marginLeft="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:text="报名机构"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <org.angmarch.views.NiceSpinner
                        android:id="@+id/nice_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="请选择" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/regist_phone" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"

                        android:gravity="left|center_vertical"
                        android:text="身份证号码"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="1234567890Xx"
                        android:hint="请输入"
                        android:maxLength="18"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    style="@style/view_line"
                    android:layout_marginLeft="15dp" />
                <!-- <View style="@style/view_line" /> -->


                <!-- <LinearLayout -->
                <!-- android:id="@+id/ll_register_mallcode" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:gravity="center" -->
                <!-- android:orientation="vertical" > -->


                <!-- <TextView -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginTop="20dp" -->
                <!-- android:text="点击完成“注册”即表示同意" -->
                <!-- android:textColor="#555" -->
                <!-- android:textSize="15sp" -->
                <!-- android:visibility="invisible" /> -->


                <!-- <Button -->
                <!-- android:id="@+id/btCode" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:background="@drawable/selector_0000_ddd_c5dp" -->
                <!-- android:padding="5dp" -->
                <!-- android:text="《学车守则》" -->
                <!-- android:textColor="@color/bg" -->
                <!-- android:textSize="15sp" -->
                <!-- android:visibility="gone" /> -->
                <!-- </LinearLayout> -->

            </LinearLayout>

            <Button
                android:id="@+id/btRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_green_c5dp"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="20sp" />
            <!-- </ScrollView> -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_register_btn_register_sure"
                android:layout_marginTop="27dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击注册，即表示你同意"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="《善考使用协议》"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>